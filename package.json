{
  "name": "minorm",
  "version": "1.0.0-next.1",
  "description": "Minorm - Light high-performance ORM for MySQL",
  "main": "lib/index.js",
  "scripts": {
    "dist": "yarn workspaces run dist",
    "lint": "eslint --ext .ts .",
    "test": "jest --runInBand",
    "test:unit": "jest test/unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arilas/minorm.git"
  },
  "keywords": [
    "MinORM",
    "Krona",
    "MySQL",
    "ORM"
  ],
  "author": "Alex Grand <alex@granted.name>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Arilas/minorm/issues"
  },
  "homepage": "https://github.com/Arilas/minorm#readme",
  "workspaces": [
    "packages/core",
    "packages/adapter-mysql"
  ],
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/node": "^12.0.0",
    "array-aggregate": "^0.1.7",
    "babel-jest": "^24.7.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.7.1",
    "lerna": "^3.13.4",
    "prettier": "^1.17.0",
    "sinon": "^7.3.2",
    "typescript": "^3.4.5",
    "@types/jest": "^24.0.12",
    "@types/sinon": "^7.0.11",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "@typescript-eslint/parser": "^1.7.0"
  },
  "engines": {
    "node": ">=8"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/**/src/**/*.ts"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scriptslib/)[/\\\\]",
      "(config|fixtures)"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ]
  }
}
