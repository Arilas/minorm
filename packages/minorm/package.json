{
  "name": "@minorm/core",
  "version": "0.3.0",
  "description": "MinORM - Light high-performance ORM for MySQL",
  "main": "lib/index.js",
  "scripts": {
    "dist": "babel -d lib/ src/",
    "prepublish": "in-publish && npm run dist || echo 'Bad mode'",
    "lint": "eslint .",
    "test": "jest --runInBand --forceExit && flow check",
    "test:integration": "jest test/integration --runInBand --forceExit",
    "test:functional": "jest test/functional --runInBand --forceExit",
    "test:unit": "jest test/unit --runInBand --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arilas/minorm.git"
  },
  "keywords": [
    "MinORM",
    "Krona",
    "MySQL",
    "ORM"
  ],
  "author": "Alex Grand <alex@granted.name>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Arilas/minorm/issues"
  },
  "homepage": "https://github.com/Arilas/minorm#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.0.0",
    "array-aggregate": "^0.1.7",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.6.1",
    "eslint-plugin-flowtype": "^3.0.0",
    "flow-bin": "^0.82.0",
    "flow-typed": "^2.5.1",
    "in-publish": "^2.0.0",
    "jest": "^23.6.0"
  },
  "dependencies": {
    "is-generator-function": "^1.0.7",
    "mysql2": "^1.6.1",
    "squel": "^5.12.0"
  },
  "engines": {
    "node": ">=6.10"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]",
      "(config|fixtures|utils)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ],
    "testMatch": [
      "**/test/**/*.js"
    ]
  }
}
